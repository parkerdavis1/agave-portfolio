---
layout: layouts/post-project.njk
---

{% css %}
{% include 'public/css/project.css' %}
{% include "public/css/projects-list.css" %}
{% endcss %}
<div class="toc-container">
    {% if content | toc %}
        <aside class="toc-aside">
            <span class="toc-heading">Table of Contents</span>
            {{ content | toc | safe }}
        </aside>
    {% endif %}
    <main id="skip" class="flow">
        <article class="flow">
            <h1>{{ title }}</h1>
            <div class="tags-container tags-container-post post-metadata">
                {# {% include "icons/tags.svg" %} #}
                {# {% from "components/tech-list.njk" import techlist %} #}
                {# {{ techlist(techtags) }} #}
                    {% if tags.length > 0 %}
                        <div class="tags-container"> {% include "icons/tags.svg" %}
                        {%- for tag in tags | filterTagList %}
                            {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                            <span>
                                <a href="{{ tagUrl }}" class="post-tag">#{{ tag }}</a>
                                {%- if not loop.last %},
                                {% endif %}
                            </span>
                        {%- endfor %}
                    </div>
                {% endif %}
            </div>
            {{ content | safe }}
        </article>
        <nav class="project-nav">
            <a href="/projects/">Back to Projects</a>
        </nav>
    </main>
</div>